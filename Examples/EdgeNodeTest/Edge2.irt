ifconfig:

# ethernet card 0 of router - connected to host2
name: eth0
  inet_addr: 10.0.2.2
  Mask: 255.255.255.0
  MTU: 1500
  Metric: 1
  BROADCAST MULTICAST

# obs card - connected to host1's obs card
name: obs
  inet_addr: 10.0.1.2
  Mask: 255.255.255.0
  MTU: 1500
  Metric: 1
  MULTICAST POINTTOPOINT

ifconfigend.

route:
   10.0.0.1   10.0.1.3           255.255.255.0  H  0   obs
routeend.

